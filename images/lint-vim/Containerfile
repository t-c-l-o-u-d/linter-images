FROM ghcr.io/t-c-l-o-u-d/linter-images/base-linter:latest

# install linter packages
RUN pacman --sync --refresh --noconfirm \
    vint

# clean up pacman cache
RUN pacman --sync --clean --clean --noconfirm

COPY lint.bash /usr/local/bin/lint
RUN chmod +x /usr/local/bin/lint

# suppress pkg_resources deprecation warning from vint on Python 3.14+
# REVIEW-BY: 2026-05-14 â€” remove if vint upstream drops pkg_resources
ENV LINTER_IMAGE=lint-vim
ENV PYTHONWARNINGS="ignore::UserWarning:vint.linting.cli"

WORKDIR /workspace

LABEL org.opencontainers.image.authors "https://github.com/t-c-l-o-u-d"
LABEL org.opencontainers.image.description "Linter image for vim: vint"
LABEL org.opencontainers.image.licenses "AGPL-3.0-or-later"
LABEL org.opencontainers.image.source "https://github.com/t-c-l-o-u-d/linter-images"
